using System;


namespace Turma // Dado
{
    class Program
    {
        static void Main(string[] args)
        {
            Random r = new Random();
            int n = r.Next(30);                                              //sortear o nº de alunos na turma
            int sup = 0;
            int soma = 0;
            int media;



            for(int i=1; i<=n; i++)
            {
                int res = r.Next(0, 20);                                      // sorteia as médias de cada aluno
                soma += res;                                                  // somar os resultados

                Console.WriteLine("Nota do aluno {0}: {1}", i, res);
               
                if (res >= 15)
                {
                    sup++;                                                    // aumenta o número de médias entre 15 e 20 
                }
                
            }
            
            Console.WriteLine("{0} alunos tiveram média entre 15 e 20\n",sup);
            
            media = soma / n;

            Console.WriteLine("A média foi de {0}", media);
            Console.ReadLine();
        }
    }
}
